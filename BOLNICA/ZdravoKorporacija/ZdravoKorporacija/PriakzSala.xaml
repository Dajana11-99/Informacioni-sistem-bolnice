<Window x:Class="ZdravoKorporacija.PriakzSala"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoKorporacija"
        mc:Ignorable="d"
        Title="PriakzSala" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="137*"/>
            <ColumnDefinition Width="64*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2">
            <Label HorizontalAlignment="Center" FontSize="20 " Margin="00 10 00 00">Pregled Sala</Label>
            <DataGrid x:Name="SpisakSala" ItemsSource="{Binding ListSala}" IsReadOnly="true"
                  SelectionMode="Single"  Margin="20,10,20.4,20" 
                  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" AutoGenerateColumns="False" Height="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}"/>
                    <DataGridTextColumn Header="Sprat" Binding="{Binding sprat}" />
                    <DataGridTextColumn Header="Tip" Binding="{Binding TipSale}"/>
                    <DataGridTextColumn Header="Zauzeta" Binding="{Binding Zauzeta}"/>
                </DataGrid.Columns>
            </DataGrid>
            <Grid Height="39" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="32*"/>
                    <RowDefinition Height="7*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Margin="20,0,15,5"  Grid.Column="0" Content="Dodaj Salu" Grid.RowSpan="2" Click="Button_Click"   />
                <Button Margin="20,0,15,5"  Grid.Column="1"  Content="Izmeni salu" Grid.RowSpan="2" Click="Button_Click_3"      />
                <Button Margin="20,0,15,5"  Grid.Column="2" Content="Izbrisi salu" Grid.RowSpan="2" Click="Button_Click_2"  />
                <Button Margin="20,0,20,5" Grid.Column="3" Content="Vrati se" Grid.RowSpan="2" Click="Button_Click_1"              />
            </Grid>


        </StackPanel>
    </Grid>
</Window>
